<h1>Anagram Game</h1>

<div class="letters">
<ul>
  <% @letters.each do |letter|  %>
  <li> <%= letter %></li>
  <% end %>
</ul>
</div>



<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="word" class="question" id="nme" required autocomplete="off">
  <label for="nme"><span>What is the longest word you can find?</span></label>
  <input type="submit" value="PLAY">
</form>
