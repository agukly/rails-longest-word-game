<h1>New game</h1>

<div>
<ul>
  <% @letters.each do |letter|  %>
  <li> <%= letter %></li>
  <% end %>
</ul>
</div>


<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <label for="">What is the longest word you can find?</label>
  <div id="input">
    <input id="input_table" type="text" name="word">
    <input id="submit" type="submit" value="Play">
  </div>
</form>
